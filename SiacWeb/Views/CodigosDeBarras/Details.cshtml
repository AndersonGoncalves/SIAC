@model SiacWeb.Models.ViewModels.CodigoDeBarraFormViewModel

@{
    ViewData["Title"] = "Código de Barras";
}

<h2>@ViewData["Title"]</h2>
<h4>Produto: @ViewBag.ProdutoId - @ViewBag.ProdutoDescricao</h4>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.CodigoDeBarra.CodigoBarras):
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CodigoDeBarra.CodigoBarras)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="form-group">
    <a asp-action="Index" asp-route-produtoId="@ViewBag.ProdutoId" class="btn btn-default btn-sm">Voltar</a>
    <a asp-action="Edit" asp-route-produtoId="@ViewBag.ProdutoId" class="btn btn-primary btn-sm" asp-route-id="@Model.CodigoDeBarra.Id">Alterar</a>
</div>