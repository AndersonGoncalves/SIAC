@model SiacWeb.Models.ViewModels.ClienteFormViewModel

@{
    ViewData["Title"] = "Cliente";
}

<h2>@ViewData["Title"]</h2>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Cliente.Id):
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Cliente.Id)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Cliente.RazaoSocial):
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Cliente.RazaoSocial)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Cliente.CNPJ):
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Cliente.CNPJ)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Cliente.CPF):
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Cliente.CPF)
                    </dd>
                </dl>
            </div>
        </div>

        <hr />
        <div class="text-center">
            <h3 class="text-danger">Deseja excluir o registro?</h3>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Cliente.Id" />
                <a asp-action="Index" class="btn btn-default btn-sm">Cancelar</a>
                <input type="submit" value="Excluir" class="btn btn-primary btn-sm" />
            </form>
        </div>

    </div>
</div>