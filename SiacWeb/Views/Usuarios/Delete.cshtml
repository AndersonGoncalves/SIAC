@model SiacWeb.Models.ViewModels.UsuarioFormViewModel

@{
    ViewData["Title"] = "Usuário";
}

<h2>@ViewData["Title"]</h2>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.IdentityUser.UserName):
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.IdentityUser.UserName)
                    </dd>

                </dl>
            </div>
        </div>
    </div>
</div>

<h3 class="text-danger">Deseja excluir o registro?</h3>
<form asp-action="DeletePost">
    <input type="hidden" asp-for="IdentityUser.Id" />
    <a asp-action="Index" class="btn btn-default btn-sm">Cancelar</a>
    <input type="submit" value="Excluir" class="btn btn-primary btn-sm" />
</form>