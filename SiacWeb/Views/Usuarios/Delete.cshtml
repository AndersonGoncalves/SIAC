@model SiacWeb.Models.ViewModels.UsuarioFormViewModel

@{
    ViewData["Title"] = "Usuário";
}

<h2>@ViewData["Title"]</h2>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Usuario.Nome):
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Usuario.Nome) @Html.DisplayFor(model => model.Usuario.SobreNome)
                    </dd>

                    <dt>
                        Perfil:
                    </dt>
                    <dd>
                        @foreach (var item in Model.Roles)
                        {
                            @if (Model.ExisteRoles(@item.Name))
                            {
                                @Html.DisplayFor(model => item.Name)
                                <br />
                            }
                        }
                    </dd>

                </dl>
            </div>
        </div>

        <hr />
        <div class="text-center">
            <h3 class="text-danger">Deseja excluir o registro?</h3>
            <form asp-action="DeletePost">
                <input type="hidden" asp-for="Usuario.Id" />
                <a asp-action="Index" class="btn btn-default btn-sm">Cancelar</a>
                <input type="submit" value="Excluir" class="btn btn-primary btn-sm" />
            </form>
        </div>

    </div>
</div>