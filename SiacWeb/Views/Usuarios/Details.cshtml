@model SiacWeb.Models.ViewModels.UsuarioFormViewModel

@{
    ViewData["Title"] = "Usuário";
}

<h2>@ViewData["Title"]</h2>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Usuario.Nome):
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Usuario.Nome) @Html.DisplayFor(model => model.Usuario.SobreNome)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="form-group">
    <a asp-action="Index" class="btn btn-default btn-sm">Voltar</a>
    <a asp-action="Permissoes" class="btn btn-primary btn-sm" asp-route-id=@Model.Usuario.Id>Perfil</a>
</div>