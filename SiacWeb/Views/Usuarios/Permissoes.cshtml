@model SiacWeb.Models.ViewModels.UsuarioFormViewModel

@{
    ViewData["Title"] = "Perfil de Usuário";
}

<h2>@ViewData["Title"]</h2>

<div class="form-horizontal jumbotron">
    <div class="row">
        <div class="col-md-4">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Usuario.Nome):
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Usuario.Nome) @Html.DisplayFor(model => model.Usuario.SobreNome)
                </dd>

                <dt>
                    Perfil:
                </dt>
                <dd>

                    @foreach (var item in Model.Roles)
                    {
                        <!--
                            <label>
                            <input type="checkbox" name="incluir" checked="true" onclick="javascript:document.getElementById('teste').submit()">
                        </label>
                        -->

                        @using (Html.BeginForm("Permissoes", "Usuario"))
                        {
                            @if (Model.ExisteRoles(@item.Name))
                            {
                                @Html.CheckBox("incluir", true)
                            }
                            else
                            {
                                @Html.CheckBox("incluir", false)
                            }

                            <input type="submit" value="@item.Name" name="roleName" />
                        }

                    }

                </dd>
            </dl>
        </div>
    </div>
</div>


<div class="row">
    <div class="form-group">
        <div class="col-lg-2">
            <a asp-action="Index" class="btn btn-default btn-sm">Voltar</a>
            <a asp-action="Index" class="btn btn-primary btn-sm">Salvar</a>
        </div>
    </div>
</div>

