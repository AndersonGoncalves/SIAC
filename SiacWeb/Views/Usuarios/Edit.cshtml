@model SiacWeb.Models.ViewModels.UsuarioFormViewModel

@{
    ViewData["Title"] = "Usuário";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" class="form-horizontal jumbotron">
    <fieldset>
        <input type="hidden" asp-for="Usuario.Id" />

        <div class="form-group">
            <label asp-for="Usuario.Nome" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <input asp-for="Usuario.Nome" class="form-control input-sm" id="inputSmall" placeholder="Nome" />
                <span asp-validation-for="Usuario.Nome" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Usuario.SobreNome" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <input asp-for="Usuario.SobreNome" class="form-control input-sm" id="inputSmall" placeholder="Sobre Nome" />
                <span asp-validation-for="Usuario.SobreNome" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <a asp-action="Index" class="btn btn-default btn-sm">Cancelar</a>
                <input type="submit" value="Salvar" class="btn btn-primary btn-sm">
            </div>
        </div>
    </fieldset>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}