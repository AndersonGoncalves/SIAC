@model SiacWeb.Models.ViewModels.EmpresaFormViewModel

@{
    ViewData["Title"] = "Empresa";
}

<h2>@ViewData["Title"]</h2>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Empresa.Id):
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Empresa.Id)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Empresa.Descricao):
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Empresa.Descricao)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Empresa.NomeFantasia):
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Empresa.NomeFantasia)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Empresa.RazaoSocial):
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Empresa.RazaoSocial)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Empresa.CnpjBase):
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Empresa.CnpjBase)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Empresa.Site):
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Empresa.Site)
                    </dd>
                </dl>
            </div>
        </div>

        <hr />
        <div class="text-center">
            <h3 class="text-danger">Deseja excluir o registro?</h3>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Empresa.Id" />
                <a asp-action="Index" class="btn btn-default btn-sm">Cancelar</a>
                <input type="submit" value="Excluir" class="btn btn-primary btn-sm" />
            </form>
        </div>

    </div>
</div>