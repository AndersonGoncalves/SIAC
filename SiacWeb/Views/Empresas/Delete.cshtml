@model SiacWeb.Models.Empresa

@{
    ViewData["Title"] = "Empresa";
}

<h2>@ViewData["Title"]</h2>

<hr />
<h3>Deseja excluir o registro?</h3>
<div class="row">
    <div class="col-md-4">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Descricao):
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Descricao)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.NomeFantasia):
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NomeFantasia)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.RazaoSocial):
            </dt>
            <dd>
                @Html.DisplayFor(model => model.RazaoSocial)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Site):
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Site)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="btn btn-default btn-sm">Cancelar</a>
            <input type="submit" value="Excluir" class="btn btn-primary btn-sm" />
        </form>
    </div>
</div>

