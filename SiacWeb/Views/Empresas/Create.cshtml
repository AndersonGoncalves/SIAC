@model SiacWeb.Models.Empresa

@{
    ViewData["Title"] = "Empresa";
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            <div class="form-group">
                <label asp-for="Descricao" class="control-label" for="inputSmall"></label>
                <input asp-for="Descricao" class="form-control input-sm" id="inputSmall" />
            </div>

            <div class="form-group">
                <label asp-for="NomeFantasia" class="control-label" for="inputSmall"></label>
                <input asp-for="NomeFantasia" class="form-control input-sm" id="inputSmall" />
            </div>

            <div class="form-group">
                <label asp-for="RazaoSocial" class="control-label" for="inputSmall"></label>
                <input asp-for="RazaoSocial" class="form-control input-sm" id="inputSmall" />
            </div>

            <div class="form-group">
                <label asp-for="CnpjBase" class="control-label" for="inputSmall"></label>
                <input asp-for="CnpjBase" class="form-control input-sm" id="inputSmall" />
            </div>

            <div class="form-group">
                <label asp-for="Site" class="control-label" for="inputSmall"></label>
                <input asp-for="Site" class="form-control input-sm" id="inputSmall" />
            </div>

            <div class="form-group">
                <a asp-action="Index" class="btn btn-default btn-sm">Cancelar</a>
                <input type="submit" value="Salvar" class="btn btn-primary btn-sm">                
            </div>

        </form>
    </div>
</div>