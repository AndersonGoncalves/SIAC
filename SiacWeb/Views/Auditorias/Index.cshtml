@model IEnumerable<SiacWeb.Models.Auditoria>

@{
    ViewBag.Title = "Auditoria";
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="navbar-btn">
    <div class="navbar-left navbar-left">
        <div class="form-group">
            <a asp-controller="Home" class="btn btn-default btn-sm" asp-action="Index">Home</a>
        </div>
    </div>
</div>
<div class="navbar-form">
    <form class="navbar-right navbar-right">

        <div class="input-group">

            <input type="text" name="consulta" value=@ViewData["Consulta"] class="form-control input-sm" placeholder="Digite sua pesquisa" style="font-style:italic">
            <span class="input-group-btn">
                <button type="submit" class="btn btn-success btn-sm">Consultar</button>
            </span>
        </div>

    </form>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr class="active">
            <th>
                @Html.DisplayNameFor(model => model.DataCadastro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubModulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Operacao)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DataCadastro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubModulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Operacao)
                </td>

                <td>
                    <div class="text-right">
                        <button onclick="getId(@item.Id, '@item.Dados')" type="button" class="btn btn-success btn-xs" data-toggle="modal" data-target="#exampleModal">
                            <img class="img-responsive" src="~/images/VisualizarBranco.png" />
                        </button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

    <script type="text/javascript">
        function getId(aId, aDados) {
            //debugger
            $('#exampleModal').find('.modal-title').text('Dados da Auditoria')
            $('#exampleModal').find('.modal-body input').val(aId)
            $('#exampleModal').find('.modal-body textarea').val(aDados)
            $('#exampleModal').modal()
            $('#exampleModal').modal({ keyboard: false })
            $('#exampleModal').modal('show')
        }
    </script>


    @(await Html.PartialAsync("_IndexBottomPartial", Model))


    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="exampleModalLabel"></h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="recipient-name" class="control-label">Código</label>
                        <input type="text" class="form-control" id="recipient-name" disabled>
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="control-label">Dados</label>
                        <textarea class="form-control" id="message-text" disabled></textarea>
                    </div>
                </div>
                <form>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Fechar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
