@model SiacWeb.Models.GrupoDeProduto

@{
    ViewData["Title"] = "Grupo";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" class="form-horizontal jumbotron">
    <fieldset>

        <div class="form-group">
            <label asp-for="Descricao" class="col-lg-12" for="inputSmall"></label>
            <div class="col-lg-12">
                <input asp-for="Descricao" class="form-control input-sm" id="inputSmall" placeholder="Descrição" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="text-right">
                <div class="col-lg-12 control-label">
                    <a asp-action="Index" class="btn btn-default btn-sm">Cancelar</a>
                    <input type="submit" value="Salvar" class="btn btn-primary btn-sm">
                </div>
            </div>
        </div>
</fieldset>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}