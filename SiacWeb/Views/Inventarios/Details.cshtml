@using SiacWeb.Enums;
@model SiacWeb.Models.ViewModels.InventarioFormViewModel

@{
    ViewData["Title"] = "Inventário";
}

<h2>@ViewData["Title"]</h2>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Inventario.Id):
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Inventario.Id)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Inventario.Descricao):
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Inventario.Descricao)
                    </dd>


                    <dt>
                        Produtos:
                    </dt>
                    <dd>
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr class="active">
                                    <th>
                                        Produto
                                    </th>
                                    <th>
                                        Descrição
                                    </th>
                                    <th class="text-right">
                                        Quantidade
                                    </th>
                                    <th class="text-right">
                                        Preço de Custo
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.InventarioItens)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelitem => item.Produto.Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelitem => item.Produto.Descricao)
                                        </td>
                                        <td class="text-right">
                                            @Html.DisplayFor(modelitem => item.QuantidadeInformada)
                                        </td>
                                        <td class="text-right">
                                            @Html.DisplayFor(modelitem => item.PrecoCusto)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </dd>

                </dl>
            </div>
        </div>

        <div class="form-group">
            <div class="text-right">
                <a asp-action="Index" class="btn btn-default btn-sm">Voltar</a>

                @if (Model.Inventario.Status == StatusInventario.Pendente)
                {
                    <a asp-action="Edit" class="btn btn-primary btn-sm" asp-route-id="@Model.Inventario.Id">Alterar</a>
                    <a asp-action="Processar" class="btn btn-primary btn-sm" asp-route-id="@Model.Inventario.Id">Processar</a>
                }
            </div>
        </div>

    </div>
</div>