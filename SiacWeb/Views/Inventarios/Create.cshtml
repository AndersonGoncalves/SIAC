@model SiacWeb.Models.ViewModels.InventarioFormViewModel

@{
    ViewData["Title"] = "Inventário";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" class="form-horizontal jumbotron">
    <fieldset>

        <div class="form-group">
            <label asp-for="Inventario.CentroDeCustoId" class="col-lg-12" for="inputSmall"></label>
            <div class="col-lg-12">
                <select asp-for="Inventario.CentroDeCustoId" asp-items="@(new SelectList(Model.CentrosDeCustos,"Id", "RazaoSocial"))" class="form-control input-sm" id="inputSmall" placeholder="Centro de Custo"></select>
                <span asp-validation-for="Inventario.CentroDeCustoId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Inventario.FuncionarioId" class="col-lg-12" for="inputSmall"></label>
            <div class="col-lg-12">
                <select asp-for="Inventario.FuncionarioId" asp-items="@(new SelectList(Model.Funcionarios,"Id", "Nome"))" class="form-control input-sm" id="inputSmall" placeholder="Funcionários"></select>
                <span asp-validation-for="Inventario.FuncionarioId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Inventario.Descricao" class="col-lg-12 " for="inputSmall"></label>
            <div class="col-lg-12">
                <input asp-for="Inventario.Descricao" class="form-control input-sm" id="inputSmall" placeholder="Descrição" />
                <span asp-validation-for="Inventario.Descricao" class="text-danger"></span>
            </div>
        </div>

        <hr />
        <div class="form-group">
            <div class="text-right">
                <div class="col-lg-12 control-label">
                    <a asp-action="Index" class="btn btn-default btn-sm">Cancelar</a>
                    <input type="submit" value="Próximo >>" class="btn btn-primary btn-sm">
                </div>
            </div>
        </div>


</fieldset>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}