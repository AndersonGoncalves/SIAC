@model SiacWeb.Models.ViewModels.FuncionarioFormViewModel

@{
    ViewData["Title"] = "Funcionário";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" class="form-horizontal jumbotron">
    <fieldset>
        <div class="form-group has-success">
            <label class="col-lg-2 control-label">Dados Cadastrais</label>
        </div>

        <div class="form-group">
            <label asp-for="Funcionario.CentroDeCustoId" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <select asp-for="Funcionario.CentroDeCustoId" asp-items="@(new SelectList(Model.CentroDeCustos,"Id", "RazaoSocial"))" class="form-control input-sm" id="inputSmall" placeholder="Centro de custo"></select>
                <span asp-validation-for="Funcionario.CentroDeCustoId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Funcionario.Nome" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <input asp-for="Funcionario.Nome" class="form-control input-sm" id="inputSmall" placeholder="Nome" />
                <span asp-validation-for="Funcionario.Nome" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Funcionario.CPF" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <input asp-for="Funcionario.CPF" class="form-control input-sm" id="inputSmall" placeholder="CPF" />
                <span asp-validation-for="Funcionario.CPF" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Funcionario.RG" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <input asp-for="Funcionario.RG" class="form-control input-sm" id="inputSmall" placeholder="Número de identidade" />
                <span asp-validation-for="Funcionario.RG" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group has-success">
            <label class="col-lg-2 control-label">Contato</label>
        </div>

        <div class="form-group">
            <label asp-for="Funcionario.Endereco.Telefone" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <input asp-for="Funcionario.Endereco.Telefone" class="form-control input-sm" id="inputSmall" placeholder="Telefone" />
                <span asp-validation-for="Funcionario.Endereco.Telefone" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Funcionario.Celular" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <input asp-for="Funcionario.Celular" class="form-control input-sm" id="inputSmall" placeholder="Celular" />
                <span asp-validation-for="Funcionario.Celular" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Funcionario.Whatsapp" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <input asp-for="Funcionario.Whatsapp" class="form-control input-sm" id="inputSmall" placeholder="Whatsapp" />
                <span asp-validation-for="Funcionario.Whatsapp" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Funcionario.Telegram" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <input asp-for="Funcionario.Telegram" class="form-control input-sm" id="inputSmall" placeholder="Telegram" />
                <span asp-validation-for="Funcionario.Telegram" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Funcionario.Email" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <input asp-for="Funcionario.Email" class="form-control input-sm" id="inputSmall" placeholder="Email" />
                <span asp-validation-for="Funcionario.Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Funcionario.Facebook" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <input asp-for="Funcionario.Facebook" class="form-control input-sm" id="inputSmall" placeholder="Facebook" />
                <span asp-validation-for="Funcionario.Facebook" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Funcionario.Instagram" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <input asp-for="Funcionario.Instagram" class="form-control input-sm" id="inputSmall" placeholder="Instagram" />
                <span asp-validation-for="Funcionario.Instagram" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group has-success">
            <label class="col-lg-2 control-label">Endereço</label>
        </div>

        <div class="form-group">
            <label asp-for="Funcionario.Endereco.TipoDeLogradouro" class="col-lg-2 control-label" for="inputSmall"></label>
