        <div class="form-group">
            <label asp-for="Funcionario.Endereco.Logradouro" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <input asp-for="Funcionario.Endereco.Logradouro" class="form-control input-sm" id="inputSmall" placeholder="Logradouro" />
                <span asp-validation-for="Funcionario.Endereco.Logradouro" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Funcionario.Endereco.Bairro" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <input asp-for="Funcionario.Endereco.Bairro" class="form-control input-sm" id="inputSmall" placeholder="Bairro" />
                <span asp-validation-for="Funcionario.Endereco.Bairro" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Funcionario.Endereco.UF" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <input asp-for="Funcionario.Endereco.UF" class="form-control input-sm" id="inputSmall" placeholder="UF" />
                <span asp-validation-for="Funcionario.Endereco.UF" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Funcionario.Endereco.Cidade" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <input asp-for="Funcionario.Endereco.Cidade" class="form-control input-sm" id="inputSmall" placeholder="Cidade" />
