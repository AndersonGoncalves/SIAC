@model SiacWeb.Models.ViewModels.FuncionarioFormViewModel

@{
    ViewData["Title"] = "Funcionário";
}

<h2>@ViewData["Title"]</h2>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Funcionario.Id):
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Funcionario.Id)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Funcionario.Nome):
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Funcionario.Nome)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Funcionario.CPF):
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Funcionario.CPF)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<h3 class="text-danger">Deseja excluir o registro?</h3>
<form asp-action="Delete">
    <input type="hidden" asp-for="Funcionario.Id" />
    <a asp-action="Index" class="btn btn-default btn-sm">Cancelar</a>
    <input type="submit" value="Excluir" class="btn btn-primary btn-sm" />
</form>
