@model SiacWeb.Models.ViewModels.FornecedorFormViewModel

@{
    ViewData["Title"] = "Fornecedor";
}

<h2>@ViewData["Title"]</h2>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Fornecedor.Id):
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Fornecedor.Id)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Fornecedor.RazaoSocial):
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Fornecedor.RazaoSocial)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Fornecedor.CNPJ):
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Fornecedor.CNPJ)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Fornecedor.CPF):
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Fornecedor.CPF)
                    </dd>
                </dl>
            </div>
        </div>

        <div class="form-group">
            <div class="text-right">
                <a asp-action="Index" class="btn btn-default btn-sm">Voltar</a>
                <a asp-action="Edit" class="btn btn-primary btn-sm" asp-route-id="@Model.Fornecedor.Id">Alterar</a>
            </div>
        </div>

    </div>
</div>