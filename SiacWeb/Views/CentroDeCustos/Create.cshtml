@model SiacWeb.Models.ViewModels.CentroDeCustoFormViewModel

@{
    ViewData["Title"] = "Centro de Custo";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" class="form-horizontal jumbotron">
    <fieldset>
        <div class="form-group has-success">
            <label class="col-lg-2 control-label">Dados Cadastrais</label>
        </div>

        <div class="form-group">
            <label asp-for="CentroDeCusto.EmpresaId" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <select asp-for="CentroDeCusto.EmpresaId" asp-items="@(new SelectList(Model.Empresas,"Id", "RazaoSocial", ViewBag.EmpresaId))" class="form-control input-sm" id="inputSmall" placeholder="Empresa" disabled></select>
                <span asp-validation-for="CentroDeCusto.EmpresaId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CentroDeCusto.RazaoSocial" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <input asp-for="CentroDeCusto.RazaoSocial" class="form-control input-sm" id="inputSmall" placeholder="Razão Social" />
                <span asp-validation-for="CentroDeCusto.RazaoSocial" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CentroDeCusto.NomeFantasia" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <input asp-for="CentroDeCusto.NomeFantasia" class="form-control input-sm" id="inputSmall" placeholder="Nome Fantasia" />
                <span asp-validation-for="CentroDeCusto.NomeFantasia" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CentroDeCusto.CNPJ" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <input asp-for="CentroDeCusto.CNPJ" class="form-control input-sm" id="inputSmall" placeholder="CNPJ" />
                <span asp-validation-for="CentroDeCusto.CNPJ" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CentroDeCusto.IE" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <input asp-for="CentroDeCusto.IE" class="form-control input-sm" id="inputSmall" placeholder="Inscrição Estadual" />
                <span asp-validation-for="CentroDeCusto.IE" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CentroDeCusto.IM" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <input asp-for="CentroDeCusto.IM" class="form-control input-sm" id="inputSmall" placeholder="Inscrição Municipal" />
                <span asp-validation-for="CentroDeCusto.IM" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group has-success">
            <label class="col-lg-2 control-label">Endereço</label>
        </div>

        <div class="form-group">
            <label asp-for="CentroDeCusto.Endereco.TipoDeLogradouro" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <input asp-for="CentroDeCusto.Endereco.TipoDeLogradouro" class="form-control input-sm" id="inputSmall" placeholder="Tipo de Logradouro" />
                <span asp-validation-for="CentroDeCusto.Endereco.TipoDeLogradouro" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CentroDeCusto.Endereco.Logradouro" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <input asp-for="CentroDeCusto.Endereco.Logradouro" class="form-control input-sm" id="inputSmall" placeholder="Logradouro" />
                <span asp-validation-for="CentroDeCusto.Endereco.Logradouro" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CentroDeCusto.Endereco.Bairro" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <input asp-for="CentroDeCusto.Endereco.Bairro" class="form-control input-sm" id="inputSmall" placeholder="Bairro" />
                <span asp-validation-for="CentroDeCusto.Endereco.Bairro" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CentroDeCusto.Endereco.UF" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <input asp-for="CentroDeCusto.Endereco.UF" class="form-control input-sm" id="inputSmall" placeholder="UF" />
                <span asp-validation-for="CentroDeCusto.Endereco.UF" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CentroDeCusto.Endereco.Cidade" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <input asp-for="CentroDeCusto.Endereco.Cidade" class="form-control input-sm" id="inputSmall" placeholder="Cidade" />
                <span asp-validation-for="CentroDeCusto.Endereco.Cidade" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CentroDeCusto.Endereco.CEP" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <input asp-for="CentroDeCusto.Endereco.CEP" class="form-control input-sm" id="inputSmall" placeholder="CEP" />
                <span asp-validation-for="CentroDeCusto.Endereco.CEP" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CentroDeCusto.Endereco.Telefone" class="col-lg-2 control-label" for="inputSmall"></label>
            <div class="col-lg-10">
                <input asp-for="CentroDeCusto.Endereco.Telefone" class="form-control input-sm" id="inputSmall" placeholder="Telefone" />
                <span asp-validation-for="CentroDeCusto.Endereco.Telefone" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <a asp-action="Index" class="btn btn-default btn-sm">Cancelar</a>
                <input type="submit" value="Salvar" class="btn btn-primary btn-sm">
            </div>
        </div>
    </fieldset>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}